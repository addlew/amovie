button{
  background: #84C1FF;
}
.main{
  margin-top: 10rpx;
  padding: 10rpx 20rpx;
  font-size: 30rpx;
  margin-bottom: 100rpx;
  position: relative;
}

.item image{
  width: 202rpx;
  height: 283rpx;
  border-radius: 20rpx;
}
.item-right{
  width: 480rpx;
  height: 283rpx;
  float: right;
  padding: 0 10rpx;
}
.item-right text{
  color: #696969;
}
.item-title{
  font-size: 35rpx;
  padding-left: 20rpx;
}
.item-average{
  color: #696969;
  text-align: right;
}
.item-directors{
  width: 480rpx;
  height: 40rpx;
  line-height: 40rpx;
  overflow: hidden;
}
.item-casts{
  width: 480rpx;
  height: 80rpx;
  line-height: 40rpx;
  overflow: hidden;
}
.content{  
  padding: 20rpx;
  font-size: 30rpx;
}
.content-item{
  background-color: white;
  margin-bottom: 10rpx;
  border-radius: 10rpx;
  position: relative;
  padding: 0 20rpx  20rpx 20rpx;
}
.content-item view{
  padding: 10rpx 0;
}

.content-item text{
  color: #696969;
  line-height: 40rpx;
}
.content-item-title{
  font-size: 30rpx;
  text-align: center; 
  padding: 10rpx; 
}
.line{
  height: 50rpx;
  line-height: 50rpx;  
  border-bottom:  #EAEAEA 2rpx dashed;  
}
.line text{
  color: #708090;
}
.setClipboardData{
  margin-left: 40rpx;
  display: inline;
  color: #87CEEB;
}
.summary{
  margin-top: 20rpx;
  font-size: 35rpx;
  color: Green;
  font-weight: bold;
}

.content-item text{  
  padding: 10rpx;  
}

.summary-img{
  width: 288rpx;
  height: 430rpx;
  padding: 10rpx;
  text-align: center;
  border: 2rpx solid #ccc;
  box-shadow: 10rpx 10rpx 5rpx #888888;
  float: left;
  margin: 20rpx;
}
.summary-img image{
    width: 268rpx;
    height: 381rpx;
}

