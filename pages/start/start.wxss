page {
  height: 100%;
}

.container {
  height: 100%;
}

.splash {
  height: 100%;
}

.splash swiper-item {
  flex: 1;
}

.splash swiper-item image {
  position: absolute;
  height: 100%;
  width: 100%;
  opacity: .9;
}
.prompt{
  background: #696969;
  color: white;
  position: absolute;
  font-size: 35rpx;
  border-radius: 20rpx;
  width: 280rpx;
  text-align: center;
  top: 120rpx;
  left: 235rpx;
}

.start {
  position: absolute;
  bottom: 200rpx;
  left: 50%;
  width: 300rpx;
  margin-left: -150rpx;
  background-color:#84C1FF;
  color: #fff;
  border: 1rpx solid rgba(64, 88, 109, .8);
  border-radius: 200rpx;
  font-size: 40rpx;
}
