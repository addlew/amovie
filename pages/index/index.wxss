.swiper-box{
  width: 100%;
  height: 400rpx;
  background: #ccc;
}
.slide-image{    
  width: 100%;  
}  
.nav-box{
  height: 160rpx;
  background-color: white;
  display: flex;
  flex-direction:row;
  justify-content:space-around;
  align-items: center;
}
.nav-box text{
  font-size: 30rpx;
}
.nav-view{
  padding: 5rpx;
  display: flex;
  flex-direction:column;
  align-items: center;
}
.nav-img{
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  display: block; 
  padding: 20rpx;
}

